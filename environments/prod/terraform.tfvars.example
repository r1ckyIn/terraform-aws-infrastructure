# -----------------------------------------------------------------------------
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to terraform.tfvars and fill in your values
#
# SECURITY WARNING:
# - Never commit terraform.tfvars to version control
# - Use AWS Secrets Manager for production passwords
# - Review all values before applying
# -----------------------------------------------------------------------------

# General
project     = "myapp"
environment = "prod"
aws_region  = "ap-southeast-2"

# VPC
vpc_cidr           = "10.2.0.0/16"
availability_zones = ["ap-southeast-2a", "ap-southeast-2b", "ap-southeast-2c"]
single_nat_gateway = false  # Per-AZ NAT for high availability

# Application
app_port             = 8080
instance_type        = "t3.medium"
asg_min_size         = 2
asg_max_size         = 10
asg_desired_capacity = 2

# Database
db_port              = 3306
db_instance_class    = "db.r5.large"
db_allocated_storage = 100
db_name              = "appdb"
db_username          = "admin"
db_password          = "CHANGE_ME_use_secrets_manager"  # Use AWS Secrets Manager
db_multi_az          = true   # High availability
db_deletion_protection = true
db_skip_final_snapshot = false
